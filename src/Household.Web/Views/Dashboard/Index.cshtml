@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">週間サマリー</h2>

    <!-- チャート -->
    <div class="card mb-4">
        <div class="card-body">
            <canvas id="weeklyChart" height="100"></canvas>
        </div>
    </div>

    <!-- 表形式サマリー -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">日別支出詳細</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>日付</th>
                        <th>曜日</th>
                        <th class="text-end">支出額</th>
                        <th class="text-center">取引件数</th>
                    </tr>
                </thead>
                <tbody id="dailySummaryBody">
                    <tr>
                        <td colspan="4" class="text-center text-muted">読み込み中...</td>
                    </tr>
                </tbody>
            </table>
            <div class="mt-3 text-end">
                <strong>合計: <span id="totalAmount" class="text-primary">¥0</span></strong>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
    }
    .text-end {
        text-align: right;
    }
    .text-center {
        text-align: center;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/dashboard.js"></script>